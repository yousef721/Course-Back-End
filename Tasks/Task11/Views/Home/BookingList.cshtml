<h1>Booking list</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Patient Name</th>
            <th scope="col">Dr</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Doctor.Name</td>
                <td>@Model[i].AppointmentDate</td>
                <td>@Model[i].AppointmentTime.ToString("hh:mm tt")</td>
            </tr>
        }
    </tbody>
</table>